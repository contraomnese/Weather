<resources>

    <style name="Theme.Weather" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Weather.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.Weather</item>
        <item name="windowSplashScreenBackground">#2C72A1</item>
        <item name="windowSplashScreenAnimatedIcon">@null</item>
    </style>

</resources>